<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">#f7f7f7</item>
        <item name="android:layout">@dimen/activity_margin</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light">
        <item name="android:background">#f7f7f7</item>
        <item name="android:layout">@dimen/activity_margin</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar.Style</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="AppTheme.ActionBar.Style">
        <item name="android:background">#244f77</item>
        <item name="android:textColor">#f7f7f7</item>
    </style>

    <style name="button_primary">
        <item name="android:background">#0364ff</item>
        <item name="android:textColor">#f7f7f7</item>
    </style>

    <style name="button_alert">
        <item name="android:background">#ff0005</item>
        <item name="android:textColor">#f7f7f7</item>
    </style>

    <style name="button_success">
        <item name="android:background">#00cc11</item>
        <item name="android:textColor">#f7f7f7</item>
    </style>

    <style name="button_default">
        <item name="android:background">#b0b0b0</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="button_warning">
        <item name="android:background">#ccb800</item>
        <item name="android:textColor">#f7f7f7</item>
    </style>

</resources>
